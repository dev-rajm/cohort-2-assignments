generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  password String
  posts Posts[]
  createdAt DateTime @default(now())
}

model Posts {
  id Int @id @default(autoincrement())
  title String
  description String
  tags Tags[]
  user User @relation(fields: [userId], references: [id])
  userId Int 
  createdAt DateTime @default(now())
}

model Tags {
  id Int @id @default(autoincrement())
  tag String @unique
  post Posts[]
}
